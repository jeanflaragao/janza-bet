<%= turbo_frame_tag balance do %>
<%= form_with(model: balance, url: daily_balance_path(balance), method: :patch, 
      data: { turbo_frame: dom_id(balance) }, 
      class: "group" do |f| %>
<div class="flex flex-col sm:flex-row gap-4 items-start sm:items-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 border border-gray-100">
    <!-- Book Info -->
    <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-500">Book</p>
        <p class="text-lg font-semibold text-gray-800 truncate">
            <%= balance.book.description %>
        </p>
    </div>

    <!-- Balance Input -->
    <div class="w-full sm:w-auto">
        <label for="<%= dom_id(balance, :balance) %>" class="block text-sm font-medium text-gray-500 mb-1">Amount</label>
        <div class="relative rounded-md shadow-sm">
            <%= f.number_field :balance, 
                id: dom_id(balance, :balance),
                class: "block w-full rounded-md border-gray-300 pl-3 pr-12 py-2 focus:border-blue-500 focus:ring-blue-500 text-sm",
                placeholder: "0.00",
                step: "0.01" %>
            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                <span class="text-gray-500 text-sm">USD</span>
            </div>
        </div>
    </div>

    <!-- Submit Button -->
    <div class="w-full sm:w-auto self-end sm:self-center">
        <%= f.submit "Update", 
              class: "w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200",
              data: { turbo_confirm: "Are you sure you want to update this balance?", 
                      disable_with: "Updating..." } %>
    </div>
</div>
<% end %>
<% end %>