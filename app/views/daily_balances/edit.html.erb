<div class="container mx-auto mt-16 px-5">
    <h1 class="text-2xl font-bold mb-6">‚úèÔ∏è Edit Daily Balance</h1>

    <%= form_with model: @daily_balance, class: "grid grid-cols-1 md:grid-cols-3 gap-4" do |f| %>
    <div>
        <%= f.label :book_id, "Book", class: "block mb-1 font-medium" %>
        <%= f.collection_select :book_id, @books, :id, :name, {}, class: "w-full rounded border-gray-300", disabled: true %>
    </div>
    <div>
        <%= f.label :date, class: "block mb-1 font-medium" %>
        <%= f.date_field :date, class: "w-full rounded border-gray-300", disabled: true %>
    </div>
    <div>
        <%= f.label :balance, class: "block mb-1 font-medium" %>
        <%= f.number_field :balance, step: 0.01, class: "w-full rounded border-gray-300" %>
    </div>
    <div class="md:col-span-3">
        <%= f.submit "üíæ Atualizar", class: "mt-4 bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700" %>
        <%= link_to "Voltar", daily_balances_path, class: "ml-4 text-gray-600 hover:text-black" %>
    </div>
    <% end %>
</div>