<%= turbo_frame_tag balance do %>
<%= form_with(model: balance, 
                url: daily_balance_path(balance), 
                method: :patch, 
                data: { turbo_frame: dom_id(balance) }, 
                class: "balance-form") do |f| %>

<div class="flex flex-col sm:flex-row gap-4 items-start sm:items-center p-4 bg-white rounded-lg shadow-sm hover:shadow transition-all duration-200 border border-gray-200">

    <!-- Book Information -->
    <div class="flex-1 min-w-0">
        <p class="text-xs font-medium text-gray-400 mb-1">Book</p>
        <h3 class="text-base font-semibold text-gray-700 truncate">
            <%= balance.book.description %>
        </h3>
    </div>

    <!-- Balance Input -->
    <div class="w-full sm:w-32">
        <div class="relative">
            <%= f.label :balance, "Amount", class: "sr-only" %>
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500">$</span>
            </div>
            <%= f.number_field :balance, 
                step: "0.01",
                class: "block w-full pl-7 pr-12 py-2 border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-sm",
                placeholder: "0.00" %>
            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                <span class="text-gray-500 text-xs">USD</span>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-2 w-full sm:w-auto">
        <%= f.submit "Update", 
              class: "flex-1 sm:flex-none px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
    </div>

</div>
<% end %>
<% end %>