<div class="w-full max-w-6xl mx-auto mt-8 px-4 sm:px-6 lg:px-8">
    <!-- Header Card -->
    <div class="bg-white shadow-lg rounded-xl p-6 mb-8 border border-gray-100">
        <h1 class="font-bold text-3xl sm:text-4xl text-gray-800">Edit Balances for
            <span class="text-indigo-600"><%= @date %></span>
        </h1>
        <p class="mt-2 text-gray-500">Update your financial records for this date</p>
    </div>

    <!-- Balances Table Container -->
    <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100">
        <!-- Table Header -->
        <div class="grid grid-cols-3 bg-gradient-to-r from-indigo-50 to-blue-50 text-gray-700 font-semibold">
            <div class="px-6 py-4 text-left">Book</div>
            <div class="px-6 py-4 text-left">Amount</div>
            <div class="px-6 py-4 text-right">Actions</div>
        </div>

        <!-- Balances List -->
        <div id="balances" class="divide-y divide-gray-100">
            <% @balances.each do |balance| %>
            <%= turbo_frame_tag dom_id(balance), class: "hover:bg-gray-50 transition-colors duration-150" do %>
            <%= render partial: "balance_row", locals: { balance: balance } %>
            <% end %>
            <% end %>
        </div>

        <!-- Empty State (optional) -->
        <% if @balances.empty? %>
        <div class="p-8 text-center text-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="mt-4">No balances found for this date</p>
        </div>
        <% end %>
    </div>
</div>