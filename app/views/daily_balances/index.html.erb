<div class="max-w-4xl mx-auto px-4 py-8 bg-white rounded shadow">
    <%= form_with url: add_for_date_daily_balances_path, method: :post, class: "mb-6 flex items-end gap-4" do %>
    <div class="rounded border-gray-300 shadow-sm">
        <%= date_field_tag :date, Date.today %>
    </div>
    <div>
        <%= submit_tag "Generate", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
    </div>
    <% end %>

    <h2 class="text-xl font-semibold mb-2 text-gray-800">Daily Balance Summary</h2>
    <table class="w-full border rounded shadow-sm text-sm">
        <thead class="bg-gray-100 text-gray-700">
            <tr>
                <th class="text-left px-4 py-2">Date</th>
                <th class="text-left px-4 py-2">Total Books</th>
                <th class="text-left px-4 py-2">Books w/ Zero Balance</th>
            </tr>
        </thead>
        <tbody>
            <% @date_summaries.each do |summary| %>
            <tr class="border-t hover:bg-gray-50">
                <td class="px-4 py-2"><%= summary[:date] %></td>
                <td class="px-4 py-2"><%= summary[:total_books] %></td>
                <td class="px-4 py-2 text-red-500"><%= summary[:books_with_zero_balance] %></td>
                <td class="px-4 py-2">
                    <%= link_to "✏️", edit_by_date_daily_balances_path(date: summary[:date]), class: "text-blue-600 hover:underline" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>