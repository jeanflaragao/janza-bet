<%= turbo_frame_tag book do %>
<div class="grid grid-cols-7 gap-4 items-center px-6 py-3 border-b border-gray-200 hover:bg-gray-50 transition text-sm">

    <div class="text-gray-700"><%= book.owner %></div>
    <div class="text-gray-700"><%= book.name %></div>
    <div class="text-gray-700"><%= book.description %></div>

    <div>
        <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
            <%= number_to_currency(book.total_deposit) %>
        </span>
    </div>

    <div>
        <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
            <%= book.total_withdraw.abs %>
        </span>
    </div>

    <div class="text-gray-700"><%= number_to_currency(book.last_daily_balance || 0) %></div>

    <div class="text-center flex justify-center gap-3">
        <% if action_name != "show" %>
        <%= link_to edit_book_path(book) do %>
        <svg class=" inline-block w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
        </svg>
        <% end %>
        <%= button_to book_path(book), method: :delete, form_class: "inline-block ml-4" do %>
        <svg class="inline-block w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        <% end %>
        <% end %>
    </div>
</div>
<% end %>