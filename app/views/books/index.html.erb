<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header Section -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
        <h1 class="text-3xl font-bold text-gray-900">Books Management</h1>
        <div class="bg-blue-50 px-4 py-2 rounded-lg border border-blue-100">
            <p class="text-sm text-blue-800">Total: <%= @books.count %> Casas de apostas</p>
        </div>
    </div>

    <!-- New Book Form Card -->
    <div class="bg-white shadow-lg rounded-xl overflow-hidden mb-8 border border-gray-100 transition-all duration-200 hover:shadow-md">
        <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-gray-100">
            <h2 class="text-lg font-semibold text-gray-800">Adicione uma casa</h2>
        </div>
        <div class="p-6">
            <%= turbo_frame_tag "new-book-form", src: new_book_path, class: "w-full" %>
        </div>
    </div>

    <!-- Books Table -->
    <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100">
        <!-- Table Header -->
        <div class="grid grid-cols-2 md:grid-cols-9 gap-4 bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
            <div class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Dono</div>
            <div class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Casa de Aposta</div>
            <div class="hidden md:block text-xs font-semibold text-gray-600 uppercase tracking-wider">Apelido</div>
            <div class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</div>
            <div class="text-xs font-semibold text-gray-600 uppercase tracking-wider text-right">Depositos</div>
            <div class="text-xs font-semibold text-gray-600 uppercase tracking-wider text-right">Saques</div>
            <div class="text-xs font-semibold text-gray-600 uppercase tracking-wider text-right">Saldo</div>
            <div class="text-xs font-semibold text-gray-600 uppercase tracking-wider text-right">Resultado</div>
            <div class="text-xs font-semibold text-gray-600 uppercase tracking-wider text-right">Ações</div>
        </div>

        <!-- Books List -->
        <div id="books" class="divide-y divide-gray-100">
            <% if @books.any? %>
            <%= render @books %>
            <% else %>
            <div class="p-8 text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No books found</h3>
                <p class="mt-1 text-sm text-gray-500">Create your first book using the form above</p>
            </div>
            <% end %>
        </div>
    </div>
</div>